{
  "manifest_version": 2,

  "name": "Auto Page Refresher - Open Source",
  "description": "refresh pages automatically",
  "version": "1.0",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
   },
  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/",
    "storage"
    ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
